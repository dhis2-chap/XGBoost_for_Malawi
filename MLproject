
name: XGBoost_for_Malawi

target: disease_cases
required_covariates: 
  - population
  - rainfall
  - mean_temperature
supported_period_type: month
allow_free_additional_continuous_covariates: false

meta_data: 
  display_name: XGBoost
  description: >
    A general XGBoost model fitted individually for each region. 
  author: Halvard Emil Sand-Larsen
  author_note: > 
    This model handles each region individually and it expects monthly data for all the covariates.
  author_assessed_status: red
  organization: HISP Centre, University of Oslo
  organization_logo_url: https://landportal.org/sites/default/files/2024-03/university_of_oslo_logo.png
  contact_email: halvard@dhis2.org
  citation_info: >
    Climate Health Analytics Platform. 2025. "XGBoost".
    HISP Centre, University of Oslo.
    https://dhis2-chap.github.io/chap-core/external_models/overview_of_supported_models.html

adapters: {'Cases': 'disease_cases',
           'E': 'population',
           'month': 'month',
           'week': 'week',
           'ID_year': 'year',
           'ID_spat': 'location',
           'mean_temperature': 'temperature',
           }


entry_points:
  train:
    parameters:
      train_data: path
      model: str
    command: "Rscript train.R {train_data} {model}"
  predict:
    parameters:
      historic_data: path
      future_data: path
      model: str
      out_file: path
    command: "Rscript predict.R {model} {historic_data} {future_data} {out_file}"
